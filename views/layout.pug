  body
    #body-container
      +nav(settings.project.get('projectname') + " " + (currentUser&&currentUser.administrator?"Kreditverwaltung":"Kreditportal"), "dropdown_menu", settings.project.get('logo'))
        if currentUser && currentUser.administrator
          +nav_item( "/user/list" ) 
            span.fa.fa-th-list
            span  Kredite
          +nav_item_dropdown( "#" )(label="Auswertungen" icon="fa-cogs")
           +dd_item( "/statistics/downloads" ) 
             span.fa.fa-download
             span  Downloads
           +dd_item( "/statistics/numbers" ) 
             span.fa.fa-chart-line
             span  Zahlen, Daten, Fakten
           +dd_item( "/user/list/cancelled" ) 
             span.fa.fa-comment-dollar
             span  Anstehende Rückzahlungen
           +dd_item( "/statistics/german") 
             span.fa.fa-balance-scale
             span  Direktkredite aus Deutschland
          +nav_item_dropdown( "#" )(label="Administration" icon="fa-tools")
            +dd_item( "/admin/settings" ) 
              span.fa.fa-cog
              span  Einstellungen      
            +dd_item( "/admin/accounts" ) 
              span.fa.fa-user-shield
              span  Admin Accounts
            +dd_item( "/admin/templates" ) 
              span.fa.fa-file-code
              span  Vorlagen        
            +dd_item( "/admin/infopack" ) 
              span.fa.fa-file-download
              span  Unterlagen für Kreditgeber*innen     
        else if currentUser
          +nav_item( "profile" ) 
            span.fa.fa-info
            span  Finanzstatus
          +nav_item( "files" ) 
            span.fa.fa-download
            span  Dateien      
        +nav_item( "/procrastinate") #[span.fa.fa-clock]
      .row
        .col-xl-8.mx-auto(id="root-container")    
          .col-md-12
            if error && error.length > 0
              include partials/error

            if success && success.length > 0
              include partials/success       

            block content

    if currentUser && currentUser.administrator

      #sidebar.col-md-8.col-sm-12.col-lg-6.col-xl-4
        #sidebar-content
        .sidebar-closer
          a.btn.btn-light.btn-sm
            span.fa.fa-times

      #sidebar-opener.d-none
        a
          span.fa.fa-caret-left
        
