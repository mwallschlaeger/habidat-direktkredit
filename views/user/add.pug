extends ../admin/layout
include ../country
block admin-content
  form.form-horizontal(action="/user/add" method="post" role="form")
        legend Neue*r Direktkreditgeber*in
        .form-group
          label.control-label.col-md-2(for="first_name") Vorname
          .col-md-4
            input.form-control(type="text" id="first_name" name="first_name" required)
          label.control-label.col-md-2(for="last_name") Nachname
          .col-md-4
            input.form-control(type="text" id="last_name" name="last_name") 
        .form-group
          label.control-label.col-md-2 Strasse
          .col-md-3
            input.form-control(type="text" name="street")
          label.control-label.col-md-1 PLZ
          .col-md-1
            input.form-control(type="text" name="zip")    
          label.control-label.col-md-1 Ort
          .col-md-2
            input.form-control(type="text" name="place")    
          label.control-label.col-md-1 Land
          .col-md-1
            select.form-control(name="country")            
              +country_select_options(null)
        .form-group
          label.control-label.col-md-2 Telefonnummer
          .col-md-4
            input.form-control(type="text" name="telno")         
          label.control-label.col-md-2 E-Mail
          .col-md-4
            input.form-control(type="text" name="email")                                   
        .form-group
          label.control-label.col-md-2 IBAN
          .col-md-4
            input.form-control(type="text" name="IBAN")         
          label.control-label.col-md-2 BIC
          .col-md-4
            input.form-control(type="text" name="BIC")
        .form-group
          label.control-label.col-md-2 Beziehung zum Projekt
          .col-md-4
            select.form-control(name="relationship")
              option(value='Unbekannt') Unbekannt
              option(value='Bewohner_innen') Bewohner_innen
              option(value='Nutzer_innen') Nutzer_innen
              option(value='Verwandte') Verwandte
              option(value='Freund_innen') Freund_innen
              option(value='Bekannte') Bekannte
              option(value='MHS') Mietsh√§usersyndikat
              option(value='habiTAT') habiTAT
        .text-right
          button(type='submit' class='btn btn-primary') Speichern