extends ../admin/layout

block admin-content
  .jumbotron
    h2 Kommunikation
    p Hier gibt's Funktion zur Kommunikation mit den Direktkreditgeber*innen. 
  .row
    form.form-horizontal(action="/communication/email" method="post" role="form")
      .form-group
        .col-md-6
          .h3 E-Mail Adressen Download
        label.control-label.col-md-2 Auswahl
        .col-md-2
          select.form-control(name="mode")
            option(value='all') Alle
            option(value='active') Nur aktive
        .col-md-2
          .text-right
             button(type='submit' class='btn btn-primary') Download               
 